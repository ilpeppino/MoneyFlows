<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/customlistitem_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id"
        android:visibility="gone" />

    <TextView
        android:id="@+id/customlistitem_Category"
        android:layout_width="0dp"
        android:layout_height="36sp"
        android:layout_weight="2"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:text="Category"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/customlistitem_Cost"
        android:layout_width="0dp"
        android:layout_height="36sp"
        android:layout_weight="1"
        android:background="@color/notSelectedListViewItem"
        android:gravity="center"
        android:text="Cost"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/customlistitem_Description"
        android:layout_width="0dp"
        android:layout_height="36sp"
        android:layout_weight="3"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:text="Description"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/customlistitem_Date"
        android:layout_width="0dp"
        android:layout_height="36sp"
        android:layout_weight="1"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:text="Date"
        android:textSize="12sp"
        android:textStyle="italic" />


</LinearLayout>